# ==============================================================================
# SQL Practice Questions Platform - Environment Variables Example
# ==============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# ==============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Application environment (development, staging, production)
APP_ENV=development

# Application debug mode (true/false)
DEBUG=true

# Application log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# SQLite database path (relative to project root)
DATABASE_PATH=output/generated_data.db

# Number of records to generate
DATA_GENERATION_RECORDS=10000

# Random seed for reproducibility (optional)
DATA_GENERATION_SEED=42

# -----------------------------------------------------------------------------
# AI/LLM Configuration (for future AI integration)
# -----------------------------------------------------------------------------

# Enable AI features (true/false)
AI_ENABLED=false

# AI backend (ollama, llama_cpp, openai)
AI_BACKEND=ollama

# Ollama configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=60

# OpenAI configuration (if using OpenAI)
# OPENAI_API_KEY=your_api_key_here
# OPENAI_MODEL=gpt-4
# OPENAI_MAX_TOKENS=500

# Local model path (for llama.cpp)
# LOCAL_MODEL_PATH=models/llama-2-7b.gguf

# -----------------------------------------------------------------------------
# Server Configuration (for future API)
# -----------------------------------------------------------------------------

# API server host
API_HOST=localhost

# API server port
API_PORT=8000

# API URL prefix
API_PREFIX=/api/v1

# Enable API documentation
API_DOCS_ENABLED=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------

# Secret key for sessions (generate a strong random string)
# SECRET_KEY=your_secret_key_here

# JWT secret for API authentication
# JWT_SECRET=your_jwt_secret_here

# JWT expiration time (in seconds)
# JWT_EXPIRATION=3600

# -----------------------------------------------------------------------------
# User Management
# -----------------------------------------------------------------------------

# Default user directory
USER_DATA_DIR=users

# Maximum attempts per question
MAX_ATTEMPTS_PER_QUESTION=10

# Enable user analytics
ENABLE_ANALYTICS=true

# -----------------------------------------------------------------------------
# Question Configuration
# -----------------------------------------------------------------------------

# Questions directory
QUESTIONS_DIR=Questions

# Default difficulty level
DEFAULT_DIFFICULTY=BEGINNER

# Enable hints
ENABLE_HINTS=true

# Maximum hints per question
MAX_HINTS=5

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------

# Enable query caching
ENABLE_CACHING=true

# Cache TTL (in seconds)
CACHE_TTL=3600

# Maximum query execution time (in seconds)
MAX_QUERY_EXECUTION_TIME=30

# -----------------------------------------------------------------------------
# External Services (optional)
# -----------------------------------------------------------------------------

# Email configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@sqlpractice.com

# Analytics/Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# -----------------------------------------------------------------------------
# Testing
# -----------------------------------------------------------------------------

# Test database path
TEST_DATABASE_PATH=output/test_data.db

# Run tests in verbose mode
TEST_VERBOSE=true

# ==============================================================================
# End of .env.example
# ==============================================================================
